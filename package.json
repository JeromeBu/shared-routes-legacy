{
  "name": "shared-routes-turbo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "watch": "turbo run watch",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format-cmd": "prettier --config=./.tooling/prettierrc.json",
    "format": "pnpm format-cmd --write ./packages/**/src/",
    "format:check": "pnpm format-cmd --check ./packages/**/src/",
    "fullcheck": "pnpm format:check && turbo run lint typecheck test",
    "lint-staged": "lint-staged",
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm fullcheck",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.(md|json|yml|xml|html|css|scss|js|ts|sh|tsx)": "pnpm format-cmd"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.21.1",
    "@types/jest": "^27.4.0",
    "babel-jest": "^27.5.1",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.5.1",
    "turbo": "latest",
    "typescript": "^4.6.2"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@6.23.6"
}
